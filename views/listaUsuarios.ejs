<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <script src="https://kit.fontawesome.com/70cc7e71fa.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="icon" type="image/x-icon" href="/img/icono.ico">
    <title>Lista Usuarios</title>
</head>
<body>
    <div class="main">
        <a href="/"><i class="fa-solid fa-arrow-left"></i></a>
        <div class="usuarios">
            <% users.forEach(user => { %>
                <div class="usuario" plid="<%= user.user_id %>">
                    <p class="p_usuario" plid="<%= user.user_id %>"><%= user.user_id %> <%= user.user_name %> <%= user.user_surname %>
                        <% if (user.user_role == 'A') { %>
                            (ADMIN)
                        <% } else { %>
                            (JUGADOR)
                        <% } %>
                    </p>
                </div>
            <% }) %>
        </div>
    </div>

    <style>
        .main {
            padding: 10px;
            width: 95%;
        }

        .usuarios {
            margin-top: 5vh;
            width: 100%;
        }

        .p_usuario {
            width: 100%;
            height: 100%;
        }

        .usuario {
            padding: 10px 0;
            width: 100%;
            border-bottom: 1px solid #000;
            cursor: pointer;
        }

        .usuario:hover {
            background: #eec6fd;
        }


    </style>

    <script>
        let usuarios = document.getElementsByClassName('usuario');
        
        for (let x = 0; x < usuarios.length; x++) {
            usuarios[x].addEventListener('click', (e) => {
                window.location.href = `/jugador/${e.target.getAttribute('plid')}`;
            })
        }
    </script>
    

</body>
</html>