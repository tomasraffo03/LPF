<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <script src="https://kit.fontawesome.com/70cc7e71fa.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="icon" type="image/x-icon" href="/img/icono.ico">
    <title>Lista Usuarios</title>
</head>
<body>
    <div class="main">
        <a href="/"><i class="fa-solid fa-arrow-left"></i></a>
        <table>
            <thead id="thead">
                <td>ID</td>
                <td>Nombre</td>
                <td>Nombre de Usuario</td>
                <td>Rol</td>
                <td>Mail</td>
                <td>Ultimo inicio de sesi√≥n</td>
            </thead>
            <% users.forEach(user => { %>
                <tr class="usuario" plid="<%= user.user_id %>">
                    <td><%= user.user_id %></td>
                    <td><%= user.user_name %> <%= user.user_surname %></td>
                    <td><%= user.user_username %></td>
                    <% if (user.user_role == 'A') { %>
                        <td>ADMIN</td>
                    <% } else { %>
                        <td>JUGADOR</td>
                    <% } %>

                    <% if (user.user_mail != "") { %>
                        <td><%= user.user_mail %></td>
                    <% } else { %>
                        <td> </td>
                    <% } %>
                    
                    <% if (user.user_lastlogin != undefined) { %>
                        <td><%= new Date(user.user_lastlogin).toLocaleString("es-AR") %></td>
                    <% } else { %>
                        <td> </td>
                    <% } %>
                    
                </tr>
            <% }) %>
        </table>
        
    </div>

    <style>
        body {
            width: 100vw;
        }        

        .main {
            padding: 10px;
            width: 100%;
        }

        .stat_title {
            font-size: 25px;
        }

        table {
            margin-top: 10px;
            width: 95%;
            border-collapse: collapse;
            font-size: 20px;
            border-radius: 20px;
        }

        thead {
            border-bottom: 1px solid #000;
            border-radius: 20px;
        }

        td, thead {
            padding: 5px;
            background: rgb(247, 247, 247);
        }

        tr:hover > td {
            cursor: pointer;
            background: #eec6fd;
        }

        .fa-arrow-left {
            margin: 1%;
        }

        @media (max-width: 820px) {
            .title {
                font-size: 30px;
            }

            .stat_title {
                font-size: 20px;
            }

            table {
                font-size: 15px;
                width: 100%;
            }
        }

    </style>

    <script>
        let usuarios = document.getElementsByClassName('usuario');
        
        for (let x = 0; x < usuarios.length; x++) {
            usuarios[x].addEventListener('click', (e) => {
                window.location.href = `/jugador/${e.target.parentElement.getAttribute('plid')}`;
            })
        }
    </script>
    

</body>
</html>