<html lang="es">
<head>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/base.css">
    <script src="https://kit.fontawesome.com/70cc7e71fa.js" crossorigin="anonymous"></script>
    <title>Configuraci칩n</title>
</head>

<body>
    <a href="/"><i class="fa-solid fa-arrow-left"></i></a>
    
    <div class="main">
        <p class="sign" align="center"><%= data[0].user_name %> <%= data[0].user_surname %></p>
        <h4 align="center"><%= data[0].user_username %></h4>
        <form class="form1" action="/configuracion" method="post" autocomplete="false">
            <label for="pos1">Posici칩n principal (ARQ, DEF, MED, DEL) *</label>
            <input class="field" name="pos1" id="pos1" type="text" placeholder="<%= data[0].user_pos %>" required autocomplete="off">
            <label for="pos2">Posici칩n secundaria (ARQ, DEF, MED, DEL)</label>
            <input class="field" name="pos2" id="pos2" type="text" placeholder="<%= data[0].user_pos2 %>" autocomplete="off">
            <label for="password">Contrase침a *</label>
            <input class="pass" name="password" id="pass" type="password" required autocomplete="off">
            <input type="hidden" name="id" value="<%= data[0].user_id %>">
            <input type="submit" value="Actualizar" class="submit" id="actualizarButton">
        </form>
    </div>


    <style>
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .un, .pass {
            margin-left: 0;
        }

        .submit {
            margin-left: 0;
        }

        .field {
            width: 76%;
            color: rgb(38, 50, 56);
            font-weight: 700;
            font-size: 14px;
            letter-spacing: 1px;
            background: rgba(136, 126, 126, 0.04);
            padding: 10px 20px;
            border: none;
            border-radius: 20px;
            outline: none;
            box-sizing: border-box;
            border: 2px solid rgba(0, 0, 0, 0.02);
            margin-bottom: 50px;
            margin-left: 46px;
            text-align: center;
            margin-bottom: 27px;
            font-family: 'Ubuntu', sans-serif;
        }
    </style>
    
    
</body>

</html>